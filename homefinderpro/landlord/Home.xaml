<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="homefinderpro.landlord.Home"
             Title="Home">
    <StackLayout>
       
        <ListView x:Name="LandlordPostsListView"
                  ItemsSource="{Binding LandlordPosts}"
                  HasUnevenRows="True"
                  ItemSelected="OnItemSelected">

            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Username}" FontAttributes="Bold" />
                            <Image Source="{Binding ProfilePicture}" Aspect="AspectFill" HeightRequest="100" />
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>